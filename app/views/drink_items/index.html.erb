<h1>Listing drink_items</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Name</th>
      <th>Size</th>
      <th>Extra shot</th>
      <th>Milk</th>
      <th>Addins</th>
      <th>Iced</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drink_items.each do |drink_item| %>
      <tr>
        <td><%= drink_item.order_id %></td>
        <td><%= drink_item.name %></td>
        <td><%= drink_item.size %></td>
        <td><%= drink_item.extra_shot %></td>
        <td><%= drink_item.milk %></td>
        <td><%= drink_item.addins %></td>
        <td><%= drink_item.iced %></td>
        <td><%= drink_item.cost %></td>
        <td><%= link_to 'Show', drink_item %></td>
        <td><%= link_to 'Edit', edit_drink_item_path(drink_item) %></td>
        <td><%= link_to 'Destroy', drink_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drink item', new_drink_item_path %>

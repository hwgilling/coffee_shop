      </tr>
      <tr>
        <td><%= f.text_field :name %></td>
        <th>&nbsp&nbsp</th>
        <td><%= f.select(:size, [['S','S'], ['M','M'], ['L','L'], ['XL','XL']]) %></td>
        <th>&nbsp&nbsp</th>
        <td><%= f.text_field :cost %></td>
      </tr>
    </table>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div class="menu_items">
  <h1>Listing menu_items</h1>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Size</th>
        <th>Cost</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @menu_items.each do |menu_item| %>
        <tr>
          <td class="name"><%= menu_item.name %></td>
          <td class="size"><%= menu_item.size %></td>
          <td class="cost"><%= menu_item.cost %></td>
          <td class="list_actions"><%= link_to 'Show', menu_item %></td>
          <td class="list_actions"><%= link_to 'Edit', edit_menu_item_path(menu_item) %></td>
          <td class="list_actions"><%= link_to 'Destroy', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Menu item', new_menu_item_path %>
</div>
